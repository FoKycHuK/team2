.steps-wrapper
    width 100%
    background-color #000
    padding 10px 0

    & h2
        color #fff
        text-align center

.steps
    display flex
    align-items center
    justify-content center

    &__register
    &__select-quest
    &__start-quest
    &__complete-quest
    &__profit
        text-align center
        width 300px
        margin 20px

        & img
            height 70px
        & p
            color #fff

.footer
    border-top 1px solid #fff


@media screen and (max-width: 550px)
    .steps
        flex-direction column
