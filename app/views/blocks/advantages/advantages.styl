.advantages
    display flex
    align-items center
    justify-content space-around
    width 100%
    padding 20px 0
    background-color #fff

    & img
        width 70%

    &__start-year
    &__gamers-count
    &__quests-count
        text-align center
        margin 10px 30px

        & h4
            font-size 25px

        & p
            color #909090

@media screen and (max-width: 550px)
    .advantages
        flex-direction column
