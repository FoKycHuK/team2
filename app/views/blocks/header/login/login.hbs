<div class="login">
    {{#if username}}
        <p class="login__greeting">Привет, <a class="login__greeting__username" href="/manage">{{username}}</a>!</p>
        <a class="login__logout" href="/logout">Выйти</a>
    {{else}}
        <img class="login__pic" alt="user picture" title="user picture" src="//awesomequests.surge.sh/profile.png">
        <div class="login__register">
            <a href="/login">Войти</a>/<a href="/registration">Регистрация</a>
        </div>
    {{/if}}
</div>
