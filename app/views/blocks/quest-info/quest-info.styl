.quest-info
    min-width 800px
    color white
    font-family sans-serif

.name
    margin 2% auto
    width 80%
    font-size 400%
    text-align center

.info-block
    width 86%
    margin 2% auto

.avatar
    display inline-block
    width 25%
    height 300px

.stats
    display inline-block
    width 11%
    margin-left 1%
    vertical-align top
    font-size 250%

.description
    display inline-block
    width 58%
    margin-left 2%
    vertical-align top
    font-size 120%

.places
    margin: 2% auto
    width: 80%
    font-size: 200%
    text-align: center

.all-photos
    width: 80%
    margin: auto

.photo
    display: inline-block
    box-sizing: border-box
    width: 20%
    height: 200px
    margin: 2%
    border-radius: 20px
    cursor pointer

.pop-up
    position absolute
    margin auto
    top 0
    bottom 0
    left 0
    right 0
    cursor pointer
    width 60%
    height 60%
    visibility hidden
    border-radius 20px
    border 1px solid black
