.quest-info
    min-width 800px
    color white
    font-family sans-serif

.name
    margin 2% auto
    width 80%
    font-size 400%
    text-align center

.info-block
    width 86%
    margin 2% auto

.avatar
    display inline-block
    width 25%
    height 300px

.stats
    display inline-block
    width 11%
    margin-left 1%
    vertical-align top
    font-size 250%

.description
    display inline-block
    width 60%
    margin-left 2%
    vertical-align top
    font-size 120%

.places
    margin: 2% auto
    width: 80%
    font-size: 200%
    text-align: center

.all-photos
    width: 80%
    margin: auto

.photo-wrapper
    display: inline-block
    position relative

.photo
    box-sizing: border-box
    height: 200px
    margin: 2%
    border-radius: 20px

.geo
.geo-error
    width 40%
    cursor pointer
    position absolute
    bottom 15px
    right 0

.geo-error
    animation shake 0.5s

@keyframes shake
{
    0%, 100% {transform: translateX(0);}
    10%, 30%, 50%, 70%, 90% {transform: translateX(-10px);}
    20%, 40%, 60%, 80% {transform: translateX(10px);}
}

.excelent
    width 40%
    visibility hidden
    position absolute
    top 0
    left 0
