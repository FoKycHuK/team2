.quest-info
    color white
    font-family OpenSans

.name
    display flex
    width 100%
    justify-content center
    margin 2% auto
    font-size 1.8vw

.info-block
    display flex
    width 90%
    margin 2% auto
    box-shadow 0 10px 20px rgba(0,0,0,.19), 0 6px 6px rgba(0,0,0,.23);
    background-color #252525

.avatar
    width 55%
    height 100%
    object-fit cover

.stats
    display flex
    justify-content space-around
    width 100%
    font-size 250%

.description
    display inline-block
    margin-left 2%
    width 100%
    font-size 1.3vw

.places
    margin 2% auto
    width 80%
    font-size 200%
    text-align center

.all-photos
    display flex
    flex-wrap wrap
    width 80%
    margin auto

.photo-wrapper
    display inline-block
    position relative

.photo
    box-sizing border-box
    height 200px
    width 300px
    margin 0 10px
    border-radius 20px
    cursor pointer
    object-fit cover

.pop-up-wrapper
    position fixed
    margin 0
    width 100%
    height 100%
    top 0
    left 0
    display flex
    align-items center
    justify-content center
    visibility hidden

.pop-up
    margin auto
    cursor pointer
    border-radius 20px
    border 1px solid black
    width 500px

.geo
.geo-error
    width 25%
    cursor pointer
    position absolute
    bottom 15px
    right 0

.geo-error
    animation shake 0.5s

@keyframes shake
{
    0%, 100% {transform: translateX(0);}
    10%, 30%, 50%, 70%, 90% {transform: translateX(-10px);}
    20%, 40%, 60%, 80% {transform: translateX(10px);}
}

.excelent
    width 40%
    visibility hidden
    position absolute
    top 0
    left 0

.resolve-geo
    position fixed
    right 5px
    top 5px
    visibility hidden
    background-color #fff
    border-radius 10px
    width 40%
    padding 10px
    text-align center
    border 1px solid #000

.quest-comments
    width 100%
    display flex
    flex-direction column
    align-items center

.comments-label
    text-align center

.info
    width 43%
    margin-left 10px
    margin-right 10px
    margin-bottom 20px
    display flex
    flex-direction column

.author-avatar
    width 50px
    height 50px

.name-avatar
    display flex
    font-size 1.8vw
    margin-left 10px
    justify-content center

.author-info
    display flex
    width 30%
    align-items center
    justify-content center

@media screen and (max-width: 768px)
    .info-block
        flex-direction column
        width 80%

    .info
        width 100%

    .avatar
        width 100%

    .description
        font-size 14px
        width 95%

    .name
        font-size 18px

    .all-photos
        flex-direction column

    .photo-wrapper
        display flex
        align-items  center
        margin-top 3%
        margin-bottom 3%
        width 90%

    .photo
        width 100%
        object-fit cover

    .excelent
    .geo
        width 20%
