.restore-password
    -webkit-align-self flex-end
    -ms-flex-item-align end
    align-self flex-end
    color #7a207d
    text-decoration none
    border-bottom dashed
    font-size 1.2vw
    margin-right 10px

    &:hover
        text-decoration underline

.layout-body
    display -ms-flexbox
    display flex
    -ms-flex-direction column
    flex-direction column
    display -webkit-flex
    -webkit-flex-direction column

.container
    display block
    text-align center
    position relative
    width 100%
    height 100%

.header-name
    color #fff
    font-weight 400 !important

.form
    margin auto
    padding-top 20px
    padding-bottom 20px
    height 100%
    display flex
    flex-direction column
    justify-content space-around
    align-items center
    border-radius 7px
    background-color #000
    width 30%
    display -webkit-flex
    -webkit-justify-content space-around
    -webkit-flex-direction column
    -webkit-align-items center
    -webkit-box-orient: vertical

    &__change-file
        color #a9a9a9
        background-color #252525
        border-radius 4px
        width 70%

    &__error-message
        color red

    &__submit-button
        width 70%
        cursor pointer
        border-radius 5px
        background-color #454545
        padding 5px 0 5px 0color
        color #fff
        font-size 1.7vw
        border 0 none

    &__input
        color #fff
        font-size 1.7vw
        border 0 none
        border-radius 4px
        padding 5px
        background-color #252525
        outline none

        &::-webkit-input-placeholder
            color:#a9a9a9

        &::placeholder
            color #a9a9a9

        &::input-placeholder
            color #a9a9a9

    & > input
        margin-top 15px
        margin-bottom 15px

@media screen and (max-width: 768px)
    .form
        width 50%
        &__input
            font-size 16px

        &__submit-button
            font-size 16px

    .restore-password
        font-size 14px

@media screen and (max-width: 550px)
    .form
        width 70%
