{{#extend "layout"}}
    {{#content "head"}}
        <title>Вход</title>
        <link rel="stylesheet" href="//awesomequests-nikitc.surge.sh/signIn.bundle.css">
    {{/content}}
    {{#content "body"}}
        <section class="container">
            <h1 class="container__header">Вход</h1>
            <form class="container__form" action="/login" method="POST">
                <span class="container__form__error-message">{{errorMessage}}</span>
                <input class="container__form__input" type="text" name="username" placeholder="Логин">
                <input class="container__form__input" type="text" name="password" placeholder="Пароль">
                <input class="container__form__submit-button" type="submit" value="Войти">
                <a class="restore-password" href='/forgotPassword'>Восстановить пароль</a>
            </form>
        </section>
    {{/content}}
{{/extend}}
