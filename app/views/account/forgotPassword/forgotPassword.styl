.header-name
    color #fff
    font-weight 400 !important


.container
    display flex
    flex-direction column
    margin-top 3%
    width 100%
    height 100%
    align-self center
    justify-content space-around
    align-items center

.form
    padding-top 20px
    padding-bottom 20px
    height 100%
    display flex
    flex-direction column
    justify-content space-around
    align-items center
    border-radius 7px
    background-color #000
    width 30%

    &__submit-button
        width 70%
        cursor pointer
        border-radius 5px
        background-color #454545
        padding 5px 0 5px 0color
        color #fff
        font-size 1.7vw
        border 0 none

    &__input
        color #fff
        font-size 1.7vw
        border 0 none
        border-radius 4px
        padding 5px
        background-color #252525
        outline none

        &::-moz-placeholder
            color #a9a9a9
        &::-webkit-input-placeholder
            color #a9a9a9

    & > input
        margin-top 15px
        margin-bottom 15px

@media (max-width: 768px)
    .form
        width 50%
        &__input
            font-size 16px

        &__submit-button
            font-size 16px

@media (max-width: 550px)
    .form
        width 70%
