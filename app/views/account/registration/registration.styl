.layout-body
    display flex
    flex-direction column

.user-info
    display flex
    justify-content space-around

.container
    margin-top 3%
    width 100%
    height 100%
    display flex
    flex-direction column
    align-self center
    justify-content space-around
    align-items center

.input-name
    color #ffffff
    font-weight normal !important
    margin-bottom 0

.header-name
    color #ffffff
    font-weight normal !important

.form
    padding-top 20px
    padding-bottom 20px
    height 100%
    display flex
    flex-direction column
    justify-content space-around
    width 90%
    border-radius 7px
    background-color #000
    color #ffffff

    &__error-message
        color #ff0000

    &__submit-button
        width 70%
        cursor pointer
        color: #ffffff
        border-radius 5px
        background-color #454545
        font-size 1.6vw
        border 0 none
        padding 5px 0 5px 0color darkgray

.dialog-avatar
    display flex
    flex-direction column

    &__load-button
        margin-top 10px
        margin-right 0
        align-self flex-end
        cursor pointer
        color: #ffffff
        border-radius 5px
        background-color #371440
        font-size 1.4vw
        border 0 none
        padding 10px

    &__load-avatar
        display flex
        align-items center
        margin-top 20px
        justify-content center
        width 150px
        height 150px
        border 1px solid #cccccc

.add-symb
    color #cccccc
    font-size 70px

.input-hidden
    display none

.registration-button
    align-self flex-end
    margin-right 8%
    margin-top 30px
    cursor pointer
    color #ffffff
    border-radius 5px
    background-color #371440
    font-size 1.4vw
    border 0 none
    padding 10px

.input-info
    border 0 none
    border-radius 4px
    padding 5px
    background-color #252525
    font-size 1.6vw
    color #fff
    outline none

    &::placeholder
        color darkgray

    &::input-placeholder
        color darkgray
