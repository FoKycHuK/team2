{{#extend "layout"}}
    {{#content "head"}}
        <title>Изменение квеста</title>
    {{/content}}
    {{#content "body"}}
        <h1>Измененить квест</h1>
        <input
            name="name"
            placeholder="Название квеста"
            required
            pattern="[A-Za-z]+">
        <textarea name="description"></textarea>
        <input type="submit" value="Создать">
    {{/content}}
{{/extend}}
