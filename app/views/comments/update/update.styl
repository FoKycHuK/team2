.comment-update-wrapper
    width 100%
    display flex
    justify-content center

.comment-update-header
    color #fff
    margin-left 25px

.quest-comment
    width 90%
    display flex
    flex-direction column
    align-items center
    background-color #1a1717
    padding 30px

    &__user
        width 90%
        display flex
        justify-content center

        & input
            width 100%
            padding 5px

    &__text
        width 80%

        & textarea
            padding 10px
            width 100%
            height 100px

.create-comment
    margin 10px 20px
    font 20px OpenSans, sans-serif
    border-radius 20px
    padding 10px
    background-color #1b1932
    color #fff
    cursor pointer
    border 2px solid #fff
    outline none
    transition color .3s, background-color .3s, border-color .3s

    &:hover
        background-color #1a1717
        color #909090
        border-color #1b1932
